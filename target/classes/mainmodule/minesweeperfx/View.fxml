<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>

<GridPane id="gridPane" fx:controller="mainmodule.minesweeperfx.Controller" xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT"
          hgap="0" vgap="0" gridLinesVisible="false" stylesheets="style.css">
        <Button fx:id = "reset_button" onAction = "#onButtonClicked"
                GridPane.columnIndex="0" GridPane.rowIndex = "500" GridPane.columnSpan = "6"
                GridPane.rowSpan = "1" text = "RESET"
        />
        <Button fx:id = "AI_button" onAction = "#onButtonClicked"
                GridPane.columnIndex="0" GridPane.rowIndex = "503" GridPane.columnSpan = "6"
                GridPane.rowSpan = "1" text = "CPU MOVE"
        />
        <TextField fx:id = "flag_num"
                   text = "flags: " GridPane.columnIndex="0" GridPane.rowIndex = "501" GridPane.columnSpan = "6" GridPane.rowSpan = "1"
        />
        <TextField id = "timeField" fx:id = "time_passed"
                   text = "Time: " GridPane.columnIndex="0" GridPane.rowIndex = "502" GridPane.columnSpan="6" GridPane.rowSpan = "1"
        />

</GridPane>